# Locate files that contains an sqlite databases

. lib/misc/stdio
. lib/misc/binary

sqlite_database_init() {
	stdio_message_log "sqlite_database" "Starting at: $(date)"
}

sqlite_database_main () {
	file_list_by_filename "*\.db|*\.sqlitedb|*\.sqlite" | while read filename
	do
		stdio_message_warn "sqlite_database" "${filename} may be a sqlite database"
		# TODO validate contents
	done
}

sqlite_database_fini () {
	stdio_message_log "sqlite_database" "Ending at: $(date)"
}
